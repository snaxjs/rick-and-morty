{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "typeRoots": ["./node_modules/@types", "./src/tsTypes"],
    "noUnusedLocals": true,
    "baseUrl": "./src",
    "paths": {
      "@assets": ["assets"],
      "@components": ["components"],
      "@configs": ["configs"],
      "@constants": ["constants"],
      "@hooks": ["hooks"],
      "@modules": ["modules"],
      "@pages": ["pages"],
      "@routes": ["routes"],
      "@scss": ["scss"],
      "@services": ["services"],
      "@tsTypes": ["tsTypes"],
      "@utils": ["utils"],
      "@interfaces": ["interfaces"],
    }
  },
  "exclude": ["node_modules", "dist"]
}